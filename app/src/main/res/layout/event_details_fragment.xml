<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewEventPage">


    <TextView
        android:id="@+id/eventTime"
        android:layout_width="203dp"
        android:layout_height="27dp"
        android:layout_marginTop="112dp"
        android:text="Event Time"
        android:gravity="center"
        android:background="@drawable/rounded_textview"
        app:layout_constraintBottom_toTopOf="@+id/eventDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052" />

    <TextView
        android:id="@+id/eventLocation"
        android:layout_width="203dp"
        android:layout_height="27dp"
        android:layout_marginBottom="352dp"
        android:background="@drawable/rounded_textview"
        android:gravity="center"
        android:text="Latitude Displayed Here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="27dp"
        android:layout_marginBottom="280dp"
        android:background="@drawable/rounded_textview"
        android:gravity="center"
        android:text="Longitude Displayed Here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="203dp"
        android:layout_height="37dp"
        android:background="@drawable/rounded_button"
        android:text="@string/location1"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="271dp" />

    <TextView
        android:id="@+id/eventDate"
        android:layout_width="203dp"
        android:layout_height="27dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/rounded_textview"
        android:gravity="center"
        android:text="Event date"
        app:layout_constraintBottom_toTopOf="@+id/eventLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/eventName"
        android:layout_width="203dp"
        android:layout_height="27dp"
        android:layout_marginTop="36dp"
        android:text="Event Name"
        android:gravity="center"
        android:background="@drawable/rounded_textview"
        app:layout_constraintBottom_toTopOf="@+id/eventTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>